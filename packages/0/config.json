{
  "type": "object",
      "properties": {
        "mesos": {
          "type": "object",
          "depscription": "Mesos specific configuration properties",
          "properties": {
            "master": {
              "default": "zk://master.mesos:2181/mesos",
              "description": "The URL of the Mesos master. The format is a comma-delimited list of hosts like zk://host1:port,host2:port/mesos. If using ZooKeeper, pay particular attention to the leading zk:// and trailing /mesos! If not using ZooKeeper, standard host:port patterns, like localhost:5050 or 10.0.0.5:5050,10.0.0.6:5050, are also acceptable.",
              "type": "string"
            }
          },
          "required": [
            "master"
          ]
        },
        "riak": {
          "type": "object",
          "depscription": "Riak Mesos Framework specific properties",
          "properties": {
            "zk": {
              "type": "string",
              "description": "Zookeeper address. Specify in the format host:port.",
              "default": "master.mesos:2181"
            },
            "id": {
              "type": "string",
              "description": "Framework ID.",
              "default": "riak-mesos"
            },
            "ip": {
              "type": "string",
              "description": "Framework HTTP API bind address.",
            },
            "hostname": {
              "type": "string",
              "description": "Framework HTTP API hostname.",
            },
            "log": {
              "type": "string",
              "description": "Framework log file location.",
            },
            "user": {
              "type": "string",
              "description": "Framework User.",
            },
            "name": {
              "type": "string",
              "description": "Framework Name.",
              "default": "Riak Mesos Framework"
            },
            "role": {
              "type": "string",
              "description": "Framework Role.",
              "default": "*"
            },
            "url": {
                "type": "string",
                "description": "Riak Mesos Framework download URL",
                "default": "http://riak-tools.s3.amazonaws.com/riak_mesos_linux_amd64_0.1.0.tar.gz"
            },
            "cpus": {
                "type": "number",
                "description": "CPU requirements",
                "default": 0.5
            },
            "mem": {
                "type": "number",
                "description": "Memory requirements",
                "default": 512
            }
          },
          "required": [
            "zk",
            "id"
          ]
        }
      }
}
